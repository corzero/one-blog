{
  "apps": {
    "name": "zero",
    "script": "./server/app",
    "cwd": "./",
    "watch": true,
    "ignore_watch": ["node_modules", "./logs"],
    "exec_mode": "fork_mode",
    "error_file": "./logs/app-err.log",
    "out_file": "./logs/app-out.log",
    "merge_logs": true,
    "log_date_format": "YYYY-MM-DD HH:mm:ss",
    "min_uptime": "60s",
    "max_restarts": 30,
    "autorestart": true,
    "restart_delay": "60s"
  }
}
